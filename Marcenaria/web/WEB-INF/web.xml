<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>ServletLogin</servlet-name>
        <servlet-class>web.servlet.ServletLogin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletHome</servlet-name>
        <servlet-class>web.servlet.ServletHome</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletHome</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletPedido</servlet-name>
        <servlet-class>web.servlet.ServletPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletPedido</servlet-name>
        <url-pattern>/pedido</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ServletDeletarPedido</servlet-name>
        <servlet-class>web.servlet.ServletDeletarPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletDeletarPedido</servlet-name>
        <url-pattern>/deletarPedido</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletEditPedido</servlet-name>
        <servlet-class>web.servlet.ServletEditPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletEditPedido</servlet-name>
        <url-pattern>/editarPedido</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ServletAddPedido</servlet-name>
        <servlet-class>web.servlet.ServletAddPedido</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletAddPedido</servlet-name>
        <url-pattern>/addPedido</url-pattern>
    </servlet-mapping>

</web-app>